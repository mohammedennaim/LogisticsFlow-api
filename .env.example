# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=digital_logistics
POSTGRES_PORT=5433

# ===========================================
# PgAdmin Configuration
# ===========================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me_in_production
PGADMIN_PORT=8081

# ===========================================
# Application Configuration
# ===========================================
SERVER_PORT=8093
APP_HOST_PORT=8093

# ===========================================
# Spring Datasource
# ===========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/digital_logistics
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=change_me_in_production
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ===========================================
# SonarQube Configuration
# ===========================================
SONAR_PORT=9001
SONAR_HOST=http://localhost:9001
# Generate token at: http://localhost:9001 -> My Account -> Security -> Generate Token
SONAR_TOKEN=

# ===========================================
# Jenkins Configuration
# ===========================================
JENKINS_PORT=8089
JENKINS_AGENT_PORT=50000

# ===========================================
# AWS / Production Configuration
# ===========================================
# L'adresse IP publique ou le nom de domaine de votre instance AWS
PUBLIC_HOST=your_public_ip_or_domain
# Port Keycloak (doit Ãªtre ouvert dans le Security Group AWS)
KEYCLOAK_PORT=8080

# ===========================================
# Docker Compose
# ===========================================
COMPOSE_PROJECT_NAME=digitallogistics_dev